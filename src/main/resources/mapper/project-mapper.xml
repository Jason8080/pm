<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gm.pm.mapper.ProjectMapper">
    <resultMap id="proMap" type="Project">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="pmName" column="pm_name"/>
        <result property="currentStage" column="current_stage"/>
        <result property="currentTime" column="current_time"/>
        <result property="currentSlider" column="current_slider"/>
        <result property="demand" column="demand"/>
        <result property="planTime" column="plan_time"/>
        <result property="surveyTime" column="survey_time"/>
        <result property="executeTime" column="execute_time"/>
        <result property="verifyTime" column="verify_time"/>
        <result property="onlineTime" column="online_time"/>
        <result property="acceptTime" column="accept_time"/>
    </resultMap>

    <insert id="insert" parameterType="Project">
        insert into tb_project (
            id, `name`, pm_name, current_stage,
            `current_time`, current_slider, demand,
            plan_time, survey_time, execute_time,
            verify_time, online_time, accept_time
        )
        values (
            <if test="id!=null">
                #{id},
            </if>
            <if test="id==null">
                null,
            </if>
            #{name}, #{pmName}, #{currentStage},
            #{currentTime}, #{currentSlider}, #{demand},
            #{planTime}, #{surveyTime}, #{executeTime},
            #{verifyTime}, #{onlineTime}, #{acceptTime}

        )
    </insert>

    <select id="selectList" resultMap="proMap">
        select * from tb_project
        <where>
            <if test="pmName!=null and pmName!=''">
                pm_name like concat('%', #{pmName}, '%')
            </if>
        </where>
    </select>

    <select id="selectBy" resultMap="proMap">
        select * from tb_project
        <where>
            <if test="pc.pmName!=null and pc.pmName!=''">
                pm_name like concat('%', #{pc.pmName}, '%')
            </if>
            <if test="pc.overdue!=null and pc.overdue">
                and (current_stage &lt; 100 and `current_time` &lt; now())
            </if>
        </where>
    </select>
</mapper>